<body class="light ">
    <div class="wrapper vh-100">
      <%- include('../includes/nav.ejs') %>
      <div class="row align-items-center h-100">
        <form class="col-lg-3 col-md-4 col-10 mx-auto text-center" action="/verify/email" method="POST">
          <div class="mx-auto text-center my-4">
            <a class="navbar-brand mx-auto mt-2 flex-fill text-center" href="/">
              <svg version="1.1" id="logo" class="navbar-brand-img brand-md" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px" viewBox="0 0 120 120" xml:space="preserve">
                <g>
                  <polygon class="st0" points="78,105 15,105 24,87 87,87"/>
                  <polygon class="st0" points="96,69 33,69 42,51 105,51"/>
                  <polygon class="st0" points="78,33 15,33 24,15 87,15"/>
                </g>
              </svg>
            </a>
            <% if(success || error) { %>
              <div class="alert <%= (success) ? 'alert-success' : 'alert-danger' %>" role="alert">
                <% if(success) { %>
                  <h4 class="alert-heading"><%= success %></h4>
                <% } else { %>
                  <h4 class="alert-heading"><%= error %></h4>
                <% } %>
              </div>
            <% } %>
            <h2 class="my-3">Verify Email</h2>
          </div>
          <p class="text-muted">Enter your Email Address</p>
          <div class="form-group">
            <label for="inputEmail" class="sr-only">Email Address</label>
            <input name="email" value="<%= input.email %>" type="email" id="inputEmail" class="form-control form-control-lg <%= (validationBox && validationError.find(err => err.param !== 'email')) ? 'is-valid' : '' %> <%= validationError.find(err => err.param === 'email') ? 'is-invalid' : '' %>" placeholder="Email Address" required autofocus>
          </div>
          <div class="form-group">
            <label for="inputVerifyToken" class="sr-only">Verify Token</label>
            <input name="verifyToken" type="password" id="inputVerifyToken" class="form-control form-control-lg" placeholder="Verification Token" required>
          </div>
          <button class="btn btn-lg btn-primary btn-block" type="submit">Verify Email</button>
          <p class="mt-5 mb-3 text-muted">Â© 2021</p>
          <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        </form>
      </div>
    </div>
</body>