<body class="light ">
    <div class="wrapper vh-100">
      <%- include('../includes/nav.ejs') %>
      <div class="align-items-center h-100 d-flex w-50 mx-auto">
        <div class="mx-auto text-center">
          <h1 class="display-1 m-0 font-weight-bolder text-muted" style="font-size:80px;">500</h1>
          <h1 class="mb-1 text-muted font-weight-bold">OOPS!</h1>
          <h6 class="mb-3 text-muted">Something went wrong here.</h6>
          <% if(message) { %>
            <h6 class="mb-3 text-muted">MSG: <%= message %></h6>
          <% } %>
          <% if(error) { %>
            <h6 class="mb-3 text-muted">Call Stack: <%= (error) ? error : '' %></h6>
          <% } %>
          <a href="<%= (isAuthenticated) ? '/dashboard' : '/' %>" class="btn btn-lg btn-primary px-5"><%= (isAuthenticated) ? 'Back to Dashboard' : 'Back to Home' %></a>
        </div>
      </div>
    </div>
  </body>